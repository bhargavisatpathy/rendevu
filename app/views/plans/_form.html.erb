<%= bootstrap_form_for(@plan)  do |f| %>
  <%= f.text_field :name %>
  <%= f.select(:friends, current_user.friends.collect { |friend| [friend.name, friend.id] },
                                                      { :prompt => "Please select"},
                                                      { :multiple => true, :size => 3 }
              ) %>
  <%= f.select(:places, @places.collect { |place| [place.name, place.id] },
                                                      { :prompt => "Please select"},
                                                      { :multiple => true, :size => 3 }
              ) %>

  <%= f.submit "Submit", class: "btn btn-success" %>
<% end %>
